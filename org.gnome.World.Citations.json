{
    "id": "org.gnome.World.Citations",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "citations",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-documents/Bibliography:create",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DCMAKE_INSTALL_INCLUDEDIR=/app/include",
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF",
                "-DENABLE_SPLASH=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_CPP=OFF",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_GOBJECT_INTROSPECTION=OFF",
                "-DENABLE_QT5=OFF",
                "-DENABLE_QT6=OFF",
                "-DENABLE_LIBOPENJPEG=openjpeg2"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-25.04.0.tar.xz",
                    "sha256": "b010c596dce127fba88532fd2f1043e55ea30601767952d0f2c0a80e7dc0da3d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3686,
                        "url-template": "https://poppler.freedesktop.org/poppler-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "citations",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/-/project/20669/uploads/937a5f8cb83c61bdd43e76a0bd5ef44c/citations-0.8.0.tar.xz",
                    "sha256": "d5764910c8dd0e464ad4631f505c0b9e97dda354169aea4957e2f84eb5522825"
                }
            ]
        }
    ]
}
