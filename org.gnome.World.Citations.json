{
    "id": "org.gnome.World.Citations",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "citations",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-documents/Bibliography:create",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DCMAKE_INSTALL_INCLUDEDIR=/app/include",
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF",
                "-DENABLE_SPLASH=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_CPP=OFF",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_GOBJECT_INTROSPECTION=OFF",
                "-DENABLE_QT5=OFF",
                "-DENABLE_QT6=OFF",
                "-DENABLE_LIBOPENJPEG=openjpeg2"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-24.04.0.tar.xz",
                    "sha256": "1e804ec565acf7126eb2e9bb3b56422ab2039f7e05863a5dfabdd1ffd1bb77a7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3686,
                        "url-template": "https://poppler.freedesktop.org/poppler-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "citations",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/citations/uploads/842bc53ab752e8a5a1d38b3c57d99818/citations-0.6.4.tar.xz",
                    "sha256": "0f866d7d6e4a4ce4267d74f15f40f92094fe2e562f192ae408ba1e1a7983107e"
                }
            ]
        }
    ]
}
