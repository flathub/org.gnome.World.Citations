{
    "app-id": "org.gnome.World.Citations",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "citations",
    "finish-args" : [
        "--device=dri",
        "--filesystem=xdg-documents/Bibliography",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DCMAKE_INSTALL_INCLUDEDIR=/app/include",
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF",
                "-DENABLE_SPLASH=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_CPP=OFF",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_GOBJECT_INTROSPECTION=OFF",
                "-DENABLE_LIBOPENJPEG=openjpeg2"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/poppler/poppler/-/archive/poppler-22.06.0/poppler-poppler-22.06.0.tar.gz",
                    "sha256": "346c5c6a92b25030d646aea5eea3bf62e4310aa93bdeb9b2922f7989b6573ca7"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "cleanup": ["*"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "cleanup": ["*"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "commit": "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dtests=false",
                "-Dexamples=false",
                "-Dintrospection=disabled",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita",
                    "commit": "5263b5453edeef2cee495880dea054ea2386b86e"
                }
            ]
        },
        {
            "name": "citations",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/citations/uploads/3d797bd0e678708f9a7c7ef26b0d9cc1/citations-0.5.0.tar.xz",
                    "sha256": "97529518bd42b58f1981fff399162442be489d148c6846d1bf72361e92218833"
                }
            ]
        }
    ]
}
